{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
<div class="wrapper-form" style="background: rgb(9, 163, 150);">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-light" href="{{ path('app_backoffice_user_index') }}">back to list</a>
<br><br>
    <a class="btn btn-outline-light" href="{{ path('app_backoffice_user_edit', {'id': user.id}) }}">edit</a>
    <br>
    {% if is_granted("ROLE_ADMIN")%}
    {{ include('backoffice/user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
