{% extends 'base.html.twig' %}

{% block title %}House{% endblock %}

{% block body %}
    <h1>House</h1>
<div class="wrapper-form" style="background: rgb(9, 163, 150);">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ house.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ house.createdAt ? house.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ house.updatedAt ? house.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ house.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ house.image }}</td>
            </tr>
            <tr>
                <th>Colour</th>
                <td>{{ house.colour }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-light" href="{{ path('app_backoffice_house_index') }}">back to list</a>
<br><br>
    <a class="btn btn-outline-light" href="{{ path('app_backoffice_house_edit', {'id': house.id}) }}">edit</a>
<br>
    {{ include('backoffice/house/_delete_form.html.twig') }}

    </div>
{% endblock %}
