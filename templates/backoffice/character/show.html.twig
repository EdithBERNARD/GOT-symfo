{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>
<div class="wrapper-form" style="background: rgb(9, 163, 150);">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ character.createdAt ? character.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ character.updatedAt ? character.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ character.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ character.firstName }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ character.image }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ character.biography }}</td>
            </tr>
            <tr>
                <th>Mother</th>
                <td>{% if character.mother == true %}
                    {{ character.mother.firstName }} {{ character.mother.lastName }}
              
                {% endif%}</td>

            </tr>
            <tr>
                <th>Father</th>
                <td>{% if character.father == true %}
                    {{ character.father.firstName }} {{ character.father.lastName }}
                {% endif%}</td>
            </tr>
        </tbody>
        
        </table>
         <a class="btn btn-outline-light" href="{{ path('app_backoffice_character_index') }}">back to list</a>
<br><br>
    <a  class="btn btn-outline-light" href="{{ path('app_backoffice_character_edit', {'id': character.id}) }}">edit</a>
<br>
    {% if is_granted("ROLE_ADMIN")%}
    {{ include('backoffice/character/_delete_form.html.twig') }}
    {% endif %}
</div>

   
{% endblock %}
